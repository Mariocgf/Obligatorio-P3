@model MVC.Models.Envio.EnvioDetalleViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="">
    <h1 class="display-4">Welcome</h1>

    <form asp-action="Index">
        <div class="mb-2 col-6">
            <label for="nroTracking" class="form-label">Nro. Tracking</label>
            <input type="text" class="form-control" id="roTracking" name="nroTracking" placeholder="Ingrese el numero de tracking">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Buscar</button>
        </div>
        @if (!String.IsNullOrEmpty(ViewBag.Msg))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Msg
            </div>
        }
        @*                  <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        </div> *@
    </form>

</div>
@if (!String.IsNullOrEmpty(Model.NroTracking))
{
    <div>
        <h4>Detalle</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NroTracking)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NroTracking)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Peso)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Peso)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoEnvio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoEnvio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InfoAdicional)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InfoAdicional)
            </dd>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Comentarios</th>
                        <th scope="col">Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Comentarios != null)
                    {
                        @foreach (var seguimiento in Model.Comentarios)
                        {
                            <tr>
                                <th scope="row">@seguimiento.Comentario</th>
                                <th scope="row">@seguimiento.Fecha</th>
                            </tr>
                            
                        }
                    }
                </tbody>
            </table>
            @* @foreach(string comentario in Model.Comentarios)
        {
        <dt class="col-sm-2">
        Comentario
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => comentario)
        </dd>
        }) *@
        </dl>
    </div>
}

